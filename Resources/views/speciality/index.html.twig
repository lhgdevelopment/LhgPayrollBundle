{% extends 'base.html.twig' %}

{% block page_title %}{{ 'Specialities'|trans }}{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">{{ 'Specialities'|trans }}</h3>
                    <div class="box-tools">
                        <a href="{{ path('speciality_create') }}" class="btn btn-primary">
                            <i class="fa fa-plus"></i> {{ 'Create'|trans }}
                        </a>
                    </div>
                </div>
                <div class="box-body">
                    <table class="table table-hover dataTable">
                        <thead>
                            <tr>
                                <th>{{ 'Name'|trans }}</th>
                                <th>{{ 'Actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for speciality in specialities %}
                            <tr>
                                <td>{{ speciality.name }}</td>
                                <td>
                                    <a href="{{ path('speciality_edit', {'id': speciality.id}) }}" class="btn btn-default btn-sm">
                                        <i class="fa fa-edit"></i> {{ 'Edit'|trans }}
                                    </a>
                                    <a href="{{ path('speciality_delete', {'id': speciality.id}) }}" 
                                       class="btn btn-danger btn-sm" 
                                       onclick="return confirm('{{ 'Are you sure?'|trans }}')">
                                        <i class="fa fa-trash"></i> {{ 'Delete'|trans }}
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 