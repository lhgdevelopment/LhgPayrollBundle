{% extends 'base.html.twig' %}
{% import "macros/widgets.html.twig" as widgets %}

{% block page_title %}Vendor Payment{% endblock %}

{% block main %}
{% block content %}
    <h1>Vendor Payment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ vendor_payment.id }}</td>
            </tr>
            <tr>
                <th>Project</th>
                <td>{{ vendor_payment.project.name }}</td>
            </tr>
            <tr>
                <th>Vendor ID</th>
                <td>{{ vendor_payment.vendor.name }}</td>
            </tr>
            <tr>
                <th>Billing Type</th>
                <td>{{ vendor_payment.billingType }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ vendor_payment.amount }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ vendor_payment.note }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ vendor_payment.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('vendor_payment_index') }}">Back to list</a>
    <a href="{{ path('vendor_payment_edit', {'id': vendor_payment.id}) }}">Edit</a>
    <form action="{{ path('vendor_payment_delete', {'id': vendor_payment.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ vendor_payment.id) }}">
        <button type="submit">Delete</button>
    </form>
{% endblock %}
{% endblock %}
